<head><link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet"></head>

<h1>New Game</h1>


<ul class="letters">
  <%@letters.each do |letter|%>
    <li><%=letter.capitalize%></li>
  <%end%>
</ul>

<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_array, @letters %>
  <input class="input" type="text" name="word">
  <input class="submit" type="submit" value="Play">
</form>
